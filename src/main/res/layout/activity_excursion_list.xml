<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<TextView
        android:id="@+id/editTextExcursionTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Excursions"
        android:background="@color/light_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       tools:layout_editor_absoluteX="149dp"
       tools:layout_editor_absoluteY="196dp"/>
    <TextView
        android:id="@+id/textViewExcursionDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Date"
        android:background="@color/light_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/editTextExcursionTitle"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="196dp"/>

    <Button
        android:id="@+id/buttonGoToExcursions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Vacations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonBackFromVacations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExcursions"
        android:layout_width="412dp"
        android:layout_height="724dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
